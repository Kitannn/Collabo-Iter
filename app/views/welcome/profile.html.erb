			<div id="main">

					<section id="one">
						<header class="major">
							<%= grav_pic(current_user)%>
							<h2><%= current_user.username%>'s Profile Page <br /></h2>
							<div></div>
							<div class = "button">Edit Profile</div>
							<div class = "button"><%= link_to('Logout', destroy_user_session_path, method: :delete)%></div>
						</header>
						<ul>
                            <li>Username: <%= current_user.username%></li>
                            <li>Email: <%= current_user.email%></li>
                            <li>Account Created: <%= time_ago_in_words(current_user.created_at) %></li>
                        </ul>
						<ul class="actions">
							<li><a href="#three" class="button">Contact Me</a></li>
						</ul>
					</section>

					<section id="two">
						<h2>Recent Collabs</h2>
						<div class="row">
							<article class="6u 12u$(xsmall) work-item">
							    <div class = "image fit thumb"><%= image_tag("001.jpg", :alt=>"") %></div>
								<h3>Personal Projects</h3>
